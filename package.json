{
  "name": "claude-switch",
  "version": "1.8.0",
  "description": "Profile switching system for Claude Code",
  "main": "scripts/profile-switcher.js",
  "scripts": {
    "init": "node scripts/profile-switcher.js init",
    "list": "node scripts/profile-switcher.js list",
    "switch": "node scripts/profile-switcher.js switch",
    "postinstall": "node scripts/profile-switcher.js init",
    "test": "node tests/run-all.js",
    "lint": "eslint scripts/ tests/",
    "format": "prettier --write \"scripts/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"scripts/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "claude-code",
    "profile",
    "switch",
    "configuration"
  ],
  "author": "Hong",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "prettier": "^3.8.1"
  }
}
